<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="testsuite" verbose="1">

    <listeners>
        <listener class-name="com.tutorialsninja.customlisteners.CustomListeners"></listener>
        <listener class-name="org.uncommons.reportng.HTMLReporter"></listener>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"></listener>
    </listeners>
    <test name="Login Test">
        <classes>
            <class name="com.tutorialsninja.testsuit.DesktopTest"></class>
            <class name="com.tutorialsninja.testsuit.HomePageTest"></class>
            <class name="com.tutorialsninja.testsuit.LaptopsAndNotebooksTest"></class>
            <class name="com.tutorialsninja.testsuit.MyAccountTest"></class>
        </classes>
    </test>
</suite>